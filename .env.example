# Video Annotation Tool Configuration
# Copy this file to .env and modify the values as needed

# Application Settings
APP_NAME="Video Annotation Tool"
APP_VERSION="1.2.0"
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Security Settings
SECRET_KEY=your-secret-key-change-in-production
ALLOWED_ORIGINS=http://localhost:8000,http://127.0.0.1:8000,https://yourdomain.com
MAX_FILE_SIZE_MB=500

# Database Settings
DATABASE_URL=sqlite:///annotations.db
DATABASE_POOL_SIZE=10
DATABASE_TIMEOUT=30.0

# File Storage Settings
UPLOAD_DIR=uploads
STATIC_DIR=static
TEMP_DIR=temp

# Video Processing Settings
MAX_VIDEO_WIDTH=4096
MAX_VIDEO_HEIGHT=4096
MAX_FRAME_COUNT=999999
SUPPORTED_FORMATS=.mp4,.avi,.mov,.mkv,.webm

# Annotation Settings
MAX_CLASS_NAME_LENGTH=50
MAX_FILENAME_LENGTH=255

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_MAX_SIZE=10485760
LOG_BACKUP_COUNT=5

# Performance Settings
CLEANUP_INTERVAL_HOURS=24
ENABLE_METRICS=true
CACHE_SIZE_MB=64

# Development Settings
AUTO_RELOAD=false
ENABLE_CORS=true